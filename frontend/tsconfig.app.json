// tsconfig.app.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",  
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "env.d.ts"],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.test.*",
    "playwright.config.*",
    "vitest.config.*",
    "src/api-client/**"
  ]
}
